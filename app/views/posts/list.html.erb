<p id="notice"><%= notice %></p>

<h1>My Projects</h1>

<table>
  <thead>
    <tr>
      <th>Post title</th>
      <th>Post content</th>
      <th>User ID</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.post_title %></td>
        <td><%= post.post_content %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post %></td>
        <!-- <td><%= link_to 'Edit', post,  method: :edit %></td> -->
        <td><%= link_to 'Edit', edit_post_path(post) %></td>

        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path([:user_id]) %>
