<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
      <h3>Edit Profile</h3>
      <%= form_for User.new do |f| %>
        <div class="form-group">
          <%= f.label :cover %>
          <br>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: 'Full Name', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :about %>
          <%= f.text_area :about, placeholder: 'About', class: 'form-control' %>

        <div class="actions">
          <%= submit_tag 'Update', class: 'btn btn-primary' %>
        </div


      <% end %>
    </div>

  </div>
</div>
